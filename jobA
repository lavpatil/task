pipeline {
    agent any
    options { timestamps ()}

    stages {
        stage('Build') {
            steps {
                echo 'Build code'
            }
        }
        stage('Test') {
            steps {
                echo 'test code'
            }
        }
        stage('Deploy') {
            steps {
                echo "Deploy code ${currentBuild.durationString.minus(' and counting')}"
            }
        }
        stage('Build Number') {
            steps {
                echo "Build Number is  ${currentBuild.number},Job Duration ${currentBuild.durationString.minus(' and counting')}"
            }
        }
        stage('Time') {
             steps{ 
                    echo "Build <a href=\'${BUILD_URL}\'>${JOB_DISPLAY_NAME} #${BUILD_NUMBER}</a> has been built. Took ${BUILD_DURATION}. See the <a href=\'${BUILD_URL}"
            }
         }
     }
}
